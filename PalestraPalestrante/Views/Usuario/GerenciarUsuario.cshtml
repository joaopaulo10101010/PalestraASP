@using PalestraPalestrante.Authenticacao
@using System.Text.RegularExpressions
@model IEnumerable<PalestraPalestrante.Models.Usuario>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil do Usuário - PalestraCon</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- CSS Personalizado -->
    <link href="~/css/gerenciarusuario.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                <strong>PalestraCon</strong>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#palestras">Palestras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#palestrantes">Palestrantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/perfil">Perfil</a>
                    </li>
                </ul>

                <div class="d-flex">
                    <a class="btn btn-primary-custom" asp-area="" asp-controller="ListaEvento" asp-action="ListaGeral" style="margin-right: 3px;">
                        <i class="fas fa-sign-in-alt me-1"></i>Voltar
                    </a>
                    <a class="btn btn-primary-custom" asp-area="" asp-controller="Usuario" asp-action="Sair">
                        <i class="fas fa-sign-in-alt me-1"></i>Sair
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Profile Section -->
    <section class="profile-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="profile-card">
                        <div class="profile-header">
                            <div class="profile-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <h1 class="profile-name">@Context.Session.GetString(SessionKeys.nome_usuario)</h1>
                            <p class="profile-role">@Context.Session.GetString(SessionKeys.cargo_usuario)</p>
                        </div>

                        <div class="profile-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="profile-info">
                                        <h4>Informações Pessoais</h4>
                                        <div class="info-item">
                                            <span class="info-label">Nome Completo:</span>
                                            <span class="info-value">@Context.Session.GetString(SessionKeys.nome_usuario)</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">E-mail:</span>
                                            <span class="info-value">@Context.Session.GetString(SessionKeys.email_usuario)</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Data de Registro:</span>
                                            <span class="info-value">@Context.Session.GetString(SessionKeys.data_cadastro_usuario)</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">CPF:</span>
                                            <span class="info-value">@Regex.Replace(@Context.Session.GetString(SessionKeys.cpf_usuario), @"^(\d{3})(\d{3})(\d{3})(\d{2})$", "$1.$2.$3-$4")</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="profile-info">
                                        <h4>Informações da Conta</h4>
                                        <div class="info-item">
                                            <span class="info-label">Tipo de Conta:</span>
                                            <span class="info-value">@Context.Session.GetString(SessionKeys.cargo_usuario)</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Status:</span>
                                            <span class="info-value"><span class="badge bg-success">Ativo</span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Users Section -->
    <section class="users-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title">Usuários Cadastrados</h2>
                <p class="section-subtitle">Conheça outros participantes da nossa plataforma</p>
            </div>
            @TempData["MenssagemGerenciaUsuario"]
            <div class="row">
                <!-- Usuário 1 -->
                @{
                    foreach(var item in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="user-card">
                                <div class="user-card-body">
                                    <div class="user-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <h5 class="user-name">@item.GetNome()</h5>
                                    <p class="user-role">@item.GetCargo()</p>
                                    <p class="user-info">CPF: @item.GetCpf()</p>
                                    <p class="user-info">Email: @item.GetEmail()</p>
                                    <p class="user-info">Data de Cadastro: @item.GetDataCadastro()</p>
                                    <div class="user-actions">
                                        <a asp-action="RemoverUsuario" asp-route-id="@item.GetCpf()" class="btn btn-primary-custom btn-sm">Deletar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5><i class="fas fa-chalkboard-teacher me-2"></i>PalestraCon</h5>
                    <p>Conectando pessoas ao conhecimento que transforma vidas e carreiras.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h6>Navegação</h6>
                    <ul class="footer-links">
                        <li><a href="/">Início</a></li>
                        <li><a href="/#palestras">Palestras</a></li>
                        <li><a href="/#palestrantes">Palestrantes</a></li>
                        <li><a href="/perfil">Perfil</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h6>Links Úteis</h6>
                    <ul class="footer-links">
                        <li><a href="/cadastrarusuario">Cadastrar</a></li>
                        <li><a href="/login">Login</a></li>
                        <li><a href="#">Política de Privacidade</a></li>
                        <li><a href="#">Termos de Uso</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 mb-4">
                    <h6>Contato</h6>
                    <ul class="footer-contact">
                        <li><i class="fas fa-envelope me-2"></i>contato@palestracon.com</li>
                        <li><i class="fas fa-phone me-2"></i>(11) 9999-9999</li>
                        <li><i class="fas fa-map-marker-alt me-2"></i>São Paulo - SP</li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom text-center">
                <p>&copy; 2024 PalestraCon. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript Personalizado -->
    <script src="~/js/gerenciarusuario.js"></script>
</body>
</html>