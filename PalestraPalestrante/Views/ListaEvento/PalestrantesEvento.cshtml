@model IEnumerable<PalestraPalestrante.Models.PalestrantesLista>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Palestrantes - PalestraCon</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- CSS Personalizado -->
    <link href="~/css/palestrantes.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                <strong>PalestraCon</strong>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#palestras">Palestras Em Destaque</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/palestrantes">Palestrantes</a>
                    </li>
                </ul>

                <div class="d-flex">
                    <a class="btn btn-primary-custom" asp-area="" asp-controller="ListaEvento" asp-action="ListaGeral" style="margin-right: 3px;">
                        <i class="fas fa-sign-out-alt me-1"></i>Voltar
                    </a>
                    <a class="btn btn-primary-custom" asp-area="" asp-controller="Usuario" asp-action="Sair" href="/logout">
                        <i class="fas fa-sign-out-alt me-1"></i>Sair
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6">
                    <h1 class="hero-title">
                        Nossos <span class="text-highlight">Palestrantes</span>
                    </h1>
                    <p class="hero-subtitle">
                        Conheça os especialistas que compartilham conhecimento e
                        transformam vidas através de suas experiências.
                    </p>
                    <div class="hero-buttons">
                        <a href="#lista-palestrantes" class="btn btn-primary-custom btn-lg me-3">
                            <i class="fas fa-users me-2"></i>Ver Palestrantes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Lista de Palestrantes -->
    <section id="lista-palestrantes" class="palestrantes-section">
        <div class="container">
            <div class="section-header text-center mb-5">
                <h2 class="section-title">Todos os Palestrantes</h2>
                <p class="section-subtitle">Especialistas comprometidos com a disseminação do conhecimento</p>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted">Total de palestrantes: <strong>@Model.Count()</strong></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">

                @{
                    foreach(var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                            <div class="palestrante-card">
                                <div class="palestrante-header">
                                    <div class="palestrante-avatar">
                                        <i class="fas fa-user-tie"></i>
                                    </div>
                                    <h5 class="palestrante-name">@item.nome_usuario</h5>
                                    <p class="palestrante-especialidade">
                                        @item.nome_area

                                    </p>
                                </div>
                                <div class="palestrante-body">
                                    <div class="palestrante-info">
                                        <div class="info-item">
                                            <span class="info-label">CPF: </span>
                                            <span class="info-value">@item.cpf_usuario</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Nome:</span>
                                            <span class="info-value">@item.nome_usuario</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Email:</span>
                                            <span class="info-value">@item.email_usuario</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Cargo:</span>
                                            <span class="info-value">@item.cargo_usuario</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Sobre a Palestra:</span>
                                            <span class="info-value">@item.descricao_palestra</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                }
                
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5><i class="fas fa-chalkboard-teacher me-2"></i>PalestraCon</h5>
                    <p>Conectando pessoas ao conhecimento que transforma vidas e carreiras.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h6>Navegação</h6>
                    <ul class="footer-links">
                        <li><a href="/">Início</a></li>
                        <li><a href="/#palestras">Palestras</a></li>
                        <li><a href="/palestrantes">Palestrantes</a></li>
                        <li><a href="/perfil">Perfil</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h6>Links Úteis</h6>
                    <ul class="footer-links">
                        <li><a href="/cadastrarusuario">Cadastrar</a></li>
                        <li><a href="/login">Login</a></li>
                        <li><a href="#">Política de Privacidade</a></li>
                        <li><a href="#">Termos de Uso</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 mb-4">
                    <h6>Contato</h6>
                    <ul class="footer-contact">
                        <li><i class="fas fa-envelope me-2"></i>contato@palestracon.com</li>
                        <li><i class="fas fa-phone me-2"></i>(11) 9999-9999</li>
                        <li><i class="fas fa-map-marker-alt me-2"></i>São Paulo - SP</li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom text-center">
                <p>&copy; 2024 PalestraCon. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript Personalizado -->
    <script src="~/js/palestrantes.js"></script>
</body>
</html>