@{
    Layout = null;
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Cadastro para Palestras</title>

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="~/css/cadastrarusuario.css" rel="stylesheet" />

<body>
    <div class="container py-3 py-md-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card card-custom">
                    <div class="card-header header-gradient py-3 py-md-4">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-8">
                                <h2 class="mb-1 mb-md-0"><i class="fas fa-chalkboard-teacher me-2"></i>Cadastro para Palestras</h2>
                                <p class="mb-0 opacity-75">Garanta sua vaga nos melhores eventos</p>
                            </div>
                        </div>
                    </div>
                    <h2>@TempData["CadastroLog"]</h2>
                    <div class="card-body p-3 p-md-5">
                        <form asp-action="CadastrarUsuario">
                            <div class="row">
                                <div class="col-12 col-lg-8">

                                    <!-- Carousel com controles e indicadores -->
                                    <div id="eventCarousel" class="carousel slide carousel-custom" data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img src="../assets/image/carrosel/carrosel1.jpeg" class="d-block w-100" alt="Palestra 1">
                                            </div>
                                            <div class="carousel-item">
                                                <img src="../assets/image/carrosel/carrosel2.png" class="d-block w-100" alt="Palestra 2">
                                            </div>
                                            <div class="carousel-item">
                                                <img src="../assets/image/carrosel/carrosel3.webp" class="d-block w-100" alt="Palestra 3">
                                            </div>
                                        </div>
                                        <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Anterior</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Próximo</span>
                                        </button>
                                    </div>

                                    <h4 class="mb-3" style="color: var(--primary-color);">Informações Pessoais</h4>

                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="floating-label">
                                                <input type="text" class="form-control form-control-custom" name="nome" placeholder=" " required maxlength="100">
                                                <label for="nome"><i class="fas fa-user me-2"></i>Nome Completo</label>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="floating-label">
                                                <input type="email" class="form-control form-control-custom" name="email" placeholder=" " required maxlength="100">
                                                <label for="email"><i class="fas fa-envelope me-2"></i>E-mail</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="floating-label">
                                                <input type="text" class="form-control form-control-custom" id="cpf" name="cpf" placeholder=" " required maxlength="14">
                                                <label for="cpf"><i class="fas fa-id-card me-2"></i>CPF</label>
                                            </div>
                                            <div class="cpf-counter" id="cpfCounter">0/11 dígitos</div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="floating-label">
                                                <select class="form-select form-select-custom" name="tipoUsuario" required>
                                                    <option value="" selected disabled></option>
                                                    <option value="Participante">Participante</option>
                                                    <option value="Publico">Público</option>
                                                </select>
                                                <label for="tipoUsuario"><i class="fas fa-users me-2"></i>Tipo de Usuário</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="user-type-info">
                                        <small>
                                            <strong>Participante:</strong> Professores, estudiosos e membros com interesse em participar como contribuinte em uma palestra<br>
                                            <strong>Público:</strong> Pessoas que desejam assistir palestras de diversos tipos
                                        </small>
                                    </div>

                                    <h4 class="mb-3 mt-4" style="color: var(--primary-color);">Segurança</h4>

                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="floating-label">
                                                <input type="password" class="form-control form-control-custom" id="senha" name="senha" placeholder=" " required maxlength="50">
                                                <label for="senha"><i class="fas fa-lock me-2"></i>Senha</label>
                                            </div>
                                            <div class="password-strength-container">
                                                <div class="password-strength bg-secondary" id="passwordStrength"></div>
                                            </div>
                                            <small class="text-muted">Força da senha</small>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="floating-label">
                                                <input type="password" class="form-control form-control-custom" id="confirmarSenha" name="confirmarSenha" placeholder=" " required maxlength="50">
                                                <label for="confirmarSenha"><i class="fas fa-lock me-2"></i>Confirmar Senha</label>
                                            </div>
                                            <div class="form-text" id="passwordMatch"></div>
                                        </div>
                                    </div>

                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <div class="d-flex flex-column flex-md-row justify-content-md-end gap-2">
                                                <button type="reset" class="btn btn-outline-secondary order-2 order-md-1">
                                                    <i class="fas fa-redo me-2"></i>Limpar
                                                </button>
                                                <button type="submit" class="btn btn-primary-custom order-1 order-md-2">
                                                    <i class="fas fa-check-circle me-2"></i>Confirmar Inscrição
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-4 border-start ps-lg-4 mt-4 mt-lg-0">
                                    <div class="countdown">
                                        <h5 class="mb-1">Inscrições Abertas</h5>
                                        <p class="mb-0">Encerram em 5 dias</p>
                                    </div>

                                    <h5 style="color: var(--primary-color);" class="mb-3">Por que Participar?</h5>

                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="fas fa-network-wired"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Networking</h6>
                                            <small class="text-muted">Conecte-se com profissionais</small>
                                        </div>
                                    </div>

                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="fas fa-lightbulb"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Novas Ideias</h6>
                                            <small class="text-muted">Inspire-se com cases reais</small>
                                        </div>
                                    </div>

                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="fas fa-chart-line"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Atualização</h6>
                                            <small class="text-muted">Fique por dentro das tendências</small>
                                        </div>
                                    </div>

                                    <div class="feature-item">
                                        <div class="feature-icon">
                                            <i class="fas fa-certificate"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Certificado</h6>
                                            <small class="text-muted">Receba certificado de participação</small>
                                        </div>
                                    </div>

                                    <div class="mt-4 p-3 rounded" style="background-color: #f0fff8; border-left: 4px solid var(--secondary-color);">
                                        <h6 style="color: var(--secondary-color);">Informações Adicionais</h6>
                                        <p class="small text-muted mb-2"><i class="fas fa-coffee me-2"></i>Coffee break incluído</p>
                                        <p class="small text-muted mb-2"><i class="fas fa-wifi me-2"></i>Wi-Fi gratuito</p>
                                        <p class="small text-muted mb-3"><i class="fas fa-parking me-2"></i>Estacionamento no local</p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/cadastrarusuario.js"></script>

</body>