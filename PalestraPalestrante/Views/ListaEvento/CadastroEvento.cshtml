@model IEnumerable<PalestraPalestrante.Models.AreaAtuacao>;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastrar Evento - PalestraCon</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- CSS Personalizado -->
    <link href="~/css/cadastro-evento.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                <strong>PalestraCon</strong>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#palestras">Palestras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#palestrantes">Palestrantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/cadastro-evento">Cadastrar Evento</a>
                    </li>
                </ul>

                <div class="d-flex">
                    <a class="btn btn-primary-custom" asp-area="" asp-controller="ListaEvento" asp-action="ListaGeral" style="margin-right: 3px;">
                        <i class="fas fa-sign-in-alt me-1"></i>Voltar
                    </a>
                    <a class="btn btn-primary-custom" asp-area="" asp-controller="Usuario" asp-action="Sair">
                        <i class="fas fa-sign-in-alt me-1"></i>Sair
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1 class="page-title pt-5">Cadastrar Novo Evento</h1>
                <p class="page-subtitle">Preencha os dados abaixo para cadastrar um novo evento na plataforma</p>
            </div>

            <div class="form-card">
                <form id="eventoForm" method="post" asp-action="CadastroEvento" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="nomeEvento" class="form-label">Nome do Evento</label>
                        <input type="text" class="form-control" id="nomeEvento" name="nomeEvento" placeholder="Digite o nome do evento" required>
                    </div>

                    <div class="form-group">
                        <label for="dataEvento" class="form-label">Data do Evento</label>
                        <input type="datetime-local" class="form-control" id="dataEvento" name="dataEvento" required>
                    </div>

                    <div class="form-group">
                        <label for="areaTecnica" class="form-label">Área Técnica</label>
                        <select class="form-select" id="areaTecnica" name="areaTecnica" required>
                            @{
                                foreach(var item in Model)
                                {
                                    <option value="@item.Id_area">@item.nome</option>
                                }
                                
                            }
                            
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Imagem do Evento</label>
                        <div class="file-upload-container" id="fileUploadContainer">
                            <div class="file-upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="file-upload-text">
                                <p>Arraste e solte uma imagem aqui ou clique para selecionar</p>
                                <p class="text-muted small">Formatos suportados: JPG, PNG, GIF (Máx. 5MB)</p>
                            </div>
                            <input type="file" class="file-input" id="imagemEvento" name="imagemEvento" accept="image/*" required>
                            <button type="button" class="btn btn-outline-primary-custom" onclick="document.getElementById('imagemEvento').click()">
                                <i class="fas fa-folder-open me-2"></i>Selecionar Arquivo
                            </button>
                            <div class="file-name" id="fileName"></div>
                            <img id="imagePreview" class="image-preview" alt="Prévia da imagem">
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-save me-2"></i>Cadastrar Evento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <h5><i class="fas fa-chalkboard-teacher me-2"></i>PalestraCon</h5>
                    <p>Conectando pessoas ao conhecimento que transforma vidas e carreiras.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <h6>Contato</h6>
                    <ul class="footer-contact list-unstyled">
                        <li><i class="fas fa-envelope me-2"></i>contato@palestracon.com</li>
                        <li><i class="fas fa-phone me-2"></i>(11) 9999-9999</li>
                        <li><i class="fas fa-map-marker-alt me-2"></i>São Paulo - SP</li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 PalestraCon. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript Personalizado -->
    <script src="~/js/cadastro-evento.js"></script>
</body>
</html>