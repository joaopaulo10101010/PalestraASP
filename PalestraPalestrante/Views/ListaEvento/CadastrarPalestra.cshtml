@model IEnumerable<PalestraPalestrante.Models.AreaAtuacao>;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastrar Palestra - PalestraCon</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- CSS Personalizado -->
    <link href="~/css/cadastro-palestra.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                <strong>PalestraCon</strong>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#palestras">Palestras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#palestrantes">Palestrantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro-evento">Cadastrar Evento</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/cadastro-palestra">Cadastrar Palestra</a>
                    </li>
                </ul>

                <div class="d-flex">
                    <a class="btn btn-outline-primary-custom me-2" asp-area="" asp-controller="Usuario" asp-action="CadastrarUsuario">
                        <i class="fas fa-user-plus me-1"></i>Cadastrar
                    </a>
                    <a class="btn btn-primary-custom" asp-area="" asp-controller="Usuario" asp-action="Login">
                        <i class="fas fa-sign-in-alt me-1"></i>Entrar
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1 class="page-title">Cadastrar Nova Palestra</h1>
                <p class="page-subtitle">Preencha os dados abaixo para cadastrar uma nova palestra na plataforma</p>
            </div>

            <div class="form-card">
                <form id="palestraForm" method="post" asp-action="CadastrarPalestra">
                    <div class="form-group">
                        <label for="areaPalestra" class="form-label">Área da Palestra</label>
                        <select class="form-select" id="id_area" name="tipoarea" required>
                            @{
                                foreach(var item in Model)
                                {
                                    <option value="@item.Id_area">@item.nome</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="descricao" class="form-label">Descrição da Palestra</label>
                        <textarea class="form-control" id="descricao" name="descricao_palestra" rows="6" placeholder="Descreva detalhadamente o conteúdo da palestra, objetivos, público-alvo e informações relevantes..." required></textarea>
                        <div class="form-text">
                            <span id="contadorCaracteres">0</span>/1000 caracteres
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-save me-2"></i>Cadastrar Palestra
                        </button>
                        <a href="/" class="btn btn-outline-primary-custom ms-2">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <h5><i class="fas fa-chalkboard-teacher me-2"></i>PalestraCon</h5>
                    <p>Conectando pessoas ao conhecimento que transforma vidas e carreiras.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <h6>Contato</h6>
                    <ul class="footer-contact list-unstyled">
                        <li><i class="fas fa-envelope me-2"></i>contato@palestracon.com</li>
                        <li><i class="fas fa-phone me-2"></i>(11) 9999-9999</li>
                        <li><i class="fas fa-map-marker-alt me-2"></i>São Paulo - SP</li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 PalestraCon. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript Personalizado -->
    <script src="~/js/cadastro-palestra.js"></script>
</body>
</html>